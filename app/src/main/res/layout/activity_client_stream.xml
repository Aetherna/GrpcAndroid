<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StreamActivity">

    <Button
        android:id="@+id/createTrip"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="CREATE A TRIP"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createTripStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/createTrip" />

    <EditText
        android:id="@+id/followId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="follow trip id"
        app:layout_constraintTop_toBottomOf="@id/createTripStatus" />

    <Button
        android:id="@+id/follow"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="FOLLOW TRIP"
        app:layout_constraintTop_toBottomOf="@id/followId" />

    <TextView
        android:id="@+id/followedTripUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/follow" />

    <Button
        android:id="@+id/unfollow"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="UN-FOLLOW TRIP"
        app:layout_constraintTop_toBottomOf="@id/followedTripUpdates" />

</androidx.constraintlayout.widget.ConstraintLayout>